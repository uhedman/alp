executable chess
    main-is:          Main.hs

    -- Modules included in this executable, other than Main.
    other-modules:
        Common
        Errors
        Eval
        Global
        Lang
        MonadChess
        PPrint
        Parse

    ghc-options: 
        -threaded 
        -rtsopts 
        -with-rtsopts=-N 
        -fwarn-tabs 
        -fwarn-unused-imports 
        -fwarn-missing-signatures 
        -fwarn-name-shadowing 
        -fwarn-incomplete-patterns
    -- other-extensions:
    build-depends:    
          base >=4.7
        , array
        , binary
        , bytestring
        , exceptions
        , extra
        , filepath
        , haskeline
        , mtl
        , optparse-applicative
        , parsec
        , pretty
        , prettyprinter
        , prettyprinter-ansi-terminal
        , text
    hs-source-dirs:   src
    default-language: Haskell2010
